collections { base_scale: 2.6;

#define WIDTH 720
#define HEIGHT 1280

   styles {
      style {
         name: "text_style";
         base: "font=Sans:style=Bold font_size=30 color=#000000 wrap=word align=0.5 ellipsis=1.0";
      }
   }

   group {
      name: "notification_popup_layout";
      parts {

            part {
                name: "bg";
                type: RECT;
                mouse_events: 1;
                scale: 1;
                description {
                    state: "default" 0.0;
                    color: 0 0 0 102;
                    visible: 1;
                    min: WIDTH HEIGHT;
                    max: WIDTH HEIGHT;
                    align: 0.0 0.0;
                    rel1 {relative: 0.0 0.0;}
                    rel2 {relative: 1.0 1.0;}
                }
            }

            part {
                name: "popup_rect";
                type: RECT;
                mouse_events: 1;
                scale: 1;
                description {
                    state: "default" 0.0;
                    color: 255 255 255 255;
                    min: 720 150;
                    max: 720 150;
                    visible: 1;
                    align: 0.5 1.0;
                    rel2 {
                        to: "bg";
                        relative: 1.0 1.0;
                    }
                }
            }

            part {
                name: "progress_swallow";
                type: SWALLOW;
                scale: 1;
                description {
                    min: 150 150;
                    max: 150 150;
                    visible: 1;
                    fixed: 1 1;
                    align: 0.0 0.0;
                    rel1 {
                        relative: 0.0 0.0;
                        to: "popup_rect";
                    }
                    rel2 {
                        relative: 0.0 1.0;
                        to: "popup_rect";
                   }
                }
            }

            part {
                name: "popup_text";
                type: TEXTBLOCK;
                scale: 1;
                description {
                    visible: 1;
                    min: 400 190;
                    max: 400 190;
                    align: 0.5 0.5;
                    fixed: 1 1;
                    rel1 {
                        to: "popup_rect";
                        relative: 0.0 0.0;
                    }
                    rel2 {
                        to: "popup_rect";
                        relative: 1.0 1.0;
                    }
                    text {
                        style: "text_style";
                    }
                }
            }

      }
   }
}
