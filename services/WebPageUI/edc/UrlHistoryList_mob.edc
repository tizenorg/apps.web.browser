#define LIST_OFFSET_Y 108
#define URI_INPUTBOX_LENGTH 720
#define HISTORY_ITEM_W URI_INPUTBOX_LENGTH
#define HISTORY_ITEM_H 74

#include "../../../core/Tools/edc/Spacer.edc"

collections {
    group {
        name: "url_history_list";
        parts
        {
            part {
                name: "spacer1";
                type: RECT;
                scale: 1;
                description {
                    state: "default" 0.0;
                    color: 0 0 0 0;
                    min: URI_INPUTBOX_LENGTH LIST_OFFSET_Y;
                    max: URI_INPUTBOX_LENGTH LIST_OFFSET_Y;
                    visible: 0;
                    align: 0.0 0.0;
                    rel1 {
                        relative: 0 0;
                    }
                }
            }
            part {
                name: "list_swallow";
                type: SWALLOW;
                scale: 1;
                description {
                    state: "default" 0.0;
                    color: 255 0 0 150;
                    min: URI_INPUTBOX_LENGTH 0;
                    max: -1 -1;
                    visible: 1;
                    align: 0.0 0.0;
                    rel1 {
                        to: "spacer1";
                        relative: 0.0 1.0;
                    }
                    rel2 {
                        relative: 1.0 1.0;
                    }
                }
                description {
                    state: "view_quickaccess" 0.0;
                    inherit: "default" 0.0;
                }
                description {
                    state: "view_webpage";
                    inherit: "default" 0.0;
                }
            }
        }
        programs {
            program {
                name: "switch_view_quickaccess";
                signal: "switch_view_quickaccess";
                source: "ui";
                action: STATE_SET "view_quickaccess" 0.0;
                target: "list_swallow";
            }
            program {
                name: "switch_view_webpage";
                signal: "switch_view_webpage";
                source: "ui";
                action: STATE_SET "view_webpage" 0.0;
                target: "list_swallow";
            }
        }
    }

    group {
        name: "elm/genlist/item/url_historylist_grid_item/default";
        data.item: "contents" "matched_url";
        parts {
            part {
                name: "bg";
                type: RECT;
                scale: 1;
                mouse_events: 1;
                description {
                    state: "default" 0.0;
                    min: URI_INPUTBOX_LENGTH HISTORY_ITEM_H;
                    max: -1 -1;
                    visible: 1;
                    color: 255 255 255 255;
                    align: 0.0 0.0;
                }
                description {
                    state: "focused" 0.0;
                    inherit: "default" 0.0;
                    color: 0 119 246 255;
                }
            }
            part {
                name: "matched_url";
                type: SWALLOW;
                scale: 1;
                description {
                    state: "default" 0.0;
                    fixed: 0 1;
                    visible: 1;
                    min: URI_INPUTBOX_LENGTH HISTORY_ITEM_H;
                    max: -1 -1;
                    align: 0.0 0.0;
                    rel1 {
                        to: "bg";
                        relative: 0.0 0.0;
                        offset: 48 0;
                    }
                    rel2 {
                        to: "bg";
                        relative: 1.0  1.0;
                    }

                }
            }
        }
        programs {
            program {
                name: "focused";
                signal: "mouse,in";
                source: "matched_url";
                action: STATE_SET "focused" 0.0;
                target: "bg";
            }
            program {
                name: "selected";
                signal: "mouse,out";
                source: "matched_url";
                action: STATE_SET "default" 0.0;
                target: "bg";
            }
        }
    }
}
