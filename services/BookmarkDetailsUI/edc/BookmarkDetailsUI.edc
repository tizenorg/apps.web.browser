            name: "elm.thumbButton";
            type: SWALLOW;
            description {
                state: "default" 0.0;
                rel1.to: "elm.thumbnail";
                rel2.to: "elm.thumbnail";
            }
        }
        part {
            name: "bookmark_over";
            type: RECT;
            mouse_events: 1;
            repeat_events: 1;
            description {
                state: "default" 0.0;
                color: 0 0 0 0;
                rel1.to: "bg";
                rel2.to: "page_title";
            }
        }
    }
    programs{
        program {
            name: "mouse_in";
            signal: "mouse,in";
            source: "bookmark_over";
            action:  STATE_SET "focused" 0.0;
            target: "bg";
            target: "focus_highlight";
            target:  "title_bg";
        }
        program {
            name: "mouse_out";
            signal: "mouse,out";
            source: "bookmark_over";
            action:  STATE_SET "default" 0.0;
            target: "bg";
            target: "focus_highlight";
            target:  "title_bg";
        }
    }
}
