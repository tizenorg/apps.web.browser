        image: "ico_bg_round_shape_37x37.png" COMP;
        image: "ic_add_bookmark.png" COMP;
    }
    parts {
        part {
            name: "bg";
            type: RECT;
            mouse_events: 0;
            description {
                state: "default" 0.0;
                min: BOOKMARK_WIDTH BOOKMARK_HEIGHT;
                max: BOOKMARK_WIDTH BOOKMARK_HEIGHT;
